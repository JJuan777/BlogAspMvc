@{
    ViewData["Title"] = "Lista de Artículos";
}
<div class="container mt-4">
    <div class="row">
        <div class=" col-8">
            <h2 class="text-center">Vista Artículos</h2>

        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Crear Artículo
            </a>
        </div>
    </div>

    <table id="tblArticulos" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Imagen</th>
                <th>Fecha de creación</th>
                <th>Acciones</th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts {
    <script src="~/js/articulos.js"></script>
}