@model BlogCore.Models.ViewModels.HomeVM
@* SLIDER *@
<div id="sliderImagenes" class="carousel slide">
    <div class="carousel-indicators">
        @{
            int cont = 0;
        }
        @foreach (var slider in Model.Sliders.Where(s => s.Estado))
        {
            var buttonActive = cont == 0 ? "active" : "";
            <button type="button" data-bs-target="#sliderImagenes" data-bs-slide-to="@cont" class="@buttonActive" aria-label="Slide @(cont + 1)"></button>
            cont++;
        }
    </div>
    <div class="carousel-inner">
        @{
            cont = 0;
        }
        @foreach (var slider in Model.Sliders)
        {
            if (slider.Estado)
            {
                var itemDinamico = cont == 0 ? "active" : "";
                <div class="carousel-item @itemDinamico">
                    <img src="@Url.Content(slider.Imagen)" class="d-block w-100">
                    <h1 class="text-bg-dark text-center bg-dark py-1">@Html.Raw(slider.Nombre)</h1>
                </div>
                cont++;
            }
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#sliderImagenes" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#sliderImagenes" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
@* END SLIDER *@
